{
    "family": "microservicio-task",
    "networkMode": "awsvpc",
    "requiresCompatibilities": ["FARGATE"],
    "cpu": "256",
    "memory": "512",
    "executionRoleArn": "arn:aws:iam::646322278084:role/ecsTaskExecutionRole",
    "containerDefinitions": [
      {
        "name": "microservicio",
        "image": "646322278084.dkr.ecr.us-east-1.amazonaws.com/microservicio:latest",
        "portMappings": [
          {
            "containerPort": 5000,
            "hostPort": 5000,
            "protocol": "tcp"
          }
        ],
        "environment": [
          {
            "name": "DATABASE_URL",
            "value": "postgresql://postgres:1234qwerty$@microservicio-db.cwfcaw8awgbw.us-east-1.rds.amazonaws.com:5432/postgres"
          }
        ],
        "essential": true,
        "logConfiguration": {
          "logDriver": "awslogs",
          "options": {
            "awslogs-group": "/ecs/microservicio-logs",
            "awslogs-region": "us-east-1",
            "awslogs-stream-prefix": "ecs"
          }
        }
      }
    ]
  }
  